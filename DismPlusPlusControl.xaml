<UserControl x:Class="WinFastGUI.Controls.DismPlusPlusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="520" d:DesignWidth="940">
    <Grid Background="#232323" Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="İmaj &amp; ISO Yedekleme Paneli"
                   Foreground="White" FontSize="21" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- 1. ADIM: WIM ALMA -->
        <GroupBox Header="1. Adım: Sistem İmajı Oluştur (.wim)" Grid.Row="1" Foreground="#c7f7dc" FontWeight="Bold" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="5,10,5,5">
                <Button x:Name="SnapshotButton" Content="Snapshot AL" Width="120" Margin="0,0,8,0" Click="SnapshotButton_Click"/>
                <Button x:Name="DeleteSnapshotButton" Content="Snapshot SİL" Width="120" Margin="0,0,8,0" Click="DeleteSnapshotButton_Click"/>
                <Button x:Name="WimSaveButton" Content="İmaj Al (WIM)" Width="140" Margin="0,0,8,0" Click="WimSaveButton_Click"/>
                <Button x:Name="BrowseWimButton" Content="..." Width="30" Margin="0,0,8,0" Click="BrowseWimButton_Click"/>
                <TextBox x:Name="WimPathTextBox" Width="250" IsReadOnly="True" VerticalContentAlignment="Center"/>
            </StackPanel>
        </GroupBox>

        <!-- 2. ADIM: ISO OLUŞTURMA -->
        <GroupBox Header="2. Adım: İmajdan Bootable ISO Oluştur" Grid.Row="2" Foreground="#c7f7dc" FontWeight="Bold" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="5,10,5,5">
                <ComboBox x:Name="ImageTemplateComboBox" Width="220" Margin="0,0,8,0" VerticalContentAlignment="Center" Height="30">
                    <ComboBoxItem Content="Windows 10 ISO Template" Tag="MinimalISO_Template_10.zip"/>
                    <ComboBoxItem Content="Windows 11 ISO Template" Tag="MinimalISO_Template_11.zip"/>
                </ComboBox>
                <TextBox x:Name="UserImagePathTextBox" Width="300" Margin="0,0,8,0" IsReadOnly="True" VerticalContentAlignment="Center"/>
                <Button x:Name="BrowseUserImageButton" Content="Kullanılacak İmajı Seç (.wim)" Width="180" Margin="0,0,8,0" Click="BrowseUserImageButton_Click"/>
                <Button x:Name="MakeIsoFromUserImageButton" Content="Seçilenden ISO Yap" Width="180" Click="MakeIsoFromUserImageButton_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- EKSTRA ARAÇLAR (GÜNCEL HALİ) -->
        <GroupBox Header="Ekstra Araçlar" Grid.Row="3" Foreground="#c7f7dc" FontWeight="Bold">
            <StackPanel Orientation="Horizontal" Margin="5,10,5,5">
                <!-- USB seçimi -->
                <ComboBox x:Name="UsbDriveComboBox" Width="220" Margin="0,0,8,0" VerticalContentAlignment="Center" Height="30"/>
                <Button x:Name="RefreshUsbListButton" Content="USB'leri Yenile" Width="130" Margin="0,0,8,0" Click="RefreshUsbListButton_Click"/>
                
                <!-- ISO dosyası seçme -->
                <Button x:Name="BrowseIsoButton" Content="ISO Seç" Width="100" Margin="0,0,8,0" Click="BrowseIsoButton_Click"/>
                <TextBox x:Name="IsoPathTextBox" Width="260" Margin="0,0,8,0" IsReadOnly="True" VerticalContentAlignment="Center"/>
                
                <!-- ISO'yu USB'ye yazdırma -->
                <Button x:Name="WriteIsoToUsbButton" Content="ISO'yu USB'ye Yazdır" Width="170" IsEnabled="False" Click="WriteIsoToUsbButton_Click"/>
            </StackPanel>
        </GroupBox>

        <Border Grid.Row="4" Margin="0,15,0,0" BorderBrush="#444" BorderThickness="1" CornerRadius="3">
            <StackPanel Margin="5">
                <TextBlock x:Name="StatusTextBlock" Text="Durum: Beklemede" Foreground="#c7f7dc" FontSize="14" Margin="0,0,0,5"/>
                <ProgressBar x:Name="ProgressBar" Height="22" Minimum="0" Maximum="100" Margin="0,0,0,5" Foreground="#6ef86a"/>
                <TextBox x:Name="LogBox" Height="130" 
                         VerticalScrollBarVisibility="Auto" FontSize="13" 
                         Background="#19191c" Foreground="#5dfc72" IsReadOnly="True" BorderThickness="0"/>
            </StackPanel>
        </Border>
        
        <TextBox x:Name="SnapshotPathBox" Visibility="Collapsed"/>
    </Grid>
</UserControl>
