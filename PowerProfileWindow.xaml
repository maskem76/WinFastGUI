<Window x:Class="WinFastGUI.Controls.PowerProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Güç Profili Yükle"
        Height="230" Width="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#252830"
        FontFamily="Segoe UI">
    <Grid Margin="12">
        <StackPanel>
            <TextBlock Text="Hazır Güç Profili Yükle" FontSize="17" FontWeight="Bold" Foreground="#f9be2c" Margin="0,0,0,10"/>
            <ComboBox x:Name="PowerProfilesComboBox" Height="32" Margin="0,0,0,12"/>
            <Button Content="Profili Yükle" Height="32" Width="130" Click="ApplyPowerProfileButton_Click"/>
            <TextBox x:Name="PowerResultTextBox" Height="50" Margin="0,14,0,0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
