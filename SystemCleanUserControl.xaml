<UserControl x:Class="WinFastGUI.SystemCleanUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#232323">
    <UserControl.Resources>
        <!-- ComboBoxItem için okunaklı stil -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#E0E0E0"/> <!-- Yumuşak gri-beyaz, parlama azaltır -->
            <Setter Property="FontWeight" Value="SemiBold"/> <!-- Bold yerine SemiBold -->
            <Setter Property="FontSize" Value="14"/> <!-- Hafif küçültüldü -->
            <Setter Property="Background" Value="#2D2D2D"/> <!-- Daha koyu arka plan -->
            <Setter Property="Padding" Value="5"/> <!-- İç boşluk -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#424242"/> <!-- Hafif açık gri -->
                    <Setter Property="Foreground" Value="#FFFFFF"/> <!-- Beyaz yazı -->
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#00695C"/> <!-- Daha koyu teal -->
                    <Setter Property="Foreground" Value="#F5F5F5"/> <!-- Hafif gri-beyaz -->
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- ComboBox için stil -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="#E0E0E0"/> <!-- Yumuşak gri-beyaz -->
            <Setter Property="Background" Value="#2D2D2D"/> <!-- Koyu arka plan -->
            <Setter Property="BorderBrush" Value="#00695C"/> <!-- Teal kenarlık -->
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ContentPresenter Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                            </ToggleButton>
                            <Popup x:Name="Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="200">
                                    <Border Background="#2D2D2D" BorderBrush="#00695C" BorderThickness="1">
                                        <ScrollViewer>
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Modern Button Stili -->
        <Style x:Key="ColoredButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Padding" Value="16,2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="7" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Başlık -->
        <TextBlock Text="Sistem Temizliği" FontSize="22" FontWeight="Bold" Foreground="#fff" Margin="0,0,0,12"/>
        <!-- Seçim & Butonlar -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,16" VerticalAlignment="Top">
            <ComboBox x:Name="CleanModeComboBox"
                      Width="260" Height="38"
                      VerticalAlignment="Center"
                      Margin="0,0,12,0"
                      SelectedIndex="0">
                <ComboBoxItem Content="Hızlı Genel Temizliği (Önerilen)"/>
                <ComboBoxItem Content="Derin Temizlik"/>
                <ComboBoxItem Content="Genişletilmiş Temizlik"/>
            </ComboBox>
            <Button x:Name="StartCleanButton" Content="Başlat" Width="110" Style="{StaticResource ColoredButton}" Background="#43a047" Click="StartCleanButton_Click"/>
            <Button x:Name="StopButton" Content="Durdur" Width="110" Style="{StaticResource ColoredButton}" Background="#ffb300" Click="StopButton_Click"/>
            <Button x:Name="RestartButton" Content="Yeniden Başlat" Width="135" Style="{StaticResource ColoredButton}" Background="#3949ab" Click="RestartButton_Click"/>
        </StackPanel>
        <!-- Durum & Zamanlayıcı -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8" VerticalAlignment="Top">
            <TextBlock x:Name="StatusText" Text="Hazır" Foreground="#B0BEC5" FontWeight="Bold" FontSize="15"/>
            <TextBlock x:Name="TimerLabel" Text="00:00" Foreground="#B0BEC5" Margin="12,0,0,0" FontWeight="SemiBold" FontSize="15"/>
            <ProgressBar x:Name="ProgressBar" Width="240" Height="18" Margin="18,0,0,0" VerticalAlignment="Center"/>
            <TextBlock x:Name="OperationStatusLabel" Text="Hazır" Foreground="#B0BEC5" Margin="18,0,0,0" FontWeight="Bold" FontSize="15"/>
        </StackPanel>
        <!-- Log Paneli -->
        <ScrollViewer x:Name="LogScrollViewer" Grid.Row="3" Margin="0,10,0,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" CanContentScroll="True" MinHeight="200" MaxHeight="400">
            <TextBox x:Name="LogTextBox" FontFamily="Consolas" FontSize="14"
                     Background="#18181c" Foreground="#00e676" TextWrapping="Wrap"
                     IsReadOnly="True" AcceptsReturn="True" BorderThickness="1" BorderBrush="#424242"/>
        </ScrollViewer>
    </Grid>
</UserControl>