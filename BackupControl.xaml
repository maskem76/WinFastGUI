<UserControl x:Class="WinFastGUI.BackupControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10" Background="#232323">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Registry Yedekleme &amp; Geri Yükleme"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#F7F7F7"
                   FontFamily="Segoe UI"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="BackupRegistryButton" Content="Registry Yedekle (Masaüstü)" Click="BackupRegistryButton_Click"
                        Width="180" Margin="0,0,10,0" FontWeight="Bold" FontFamily="Segoe UI" FontSize="15" Background="#00897b" Foreground="White"/>
                <Button x:Name="RestoreRegistryButton" Content="Registry Geri Yükle" Click="RestoreRegistryButton_Click"
                        Width="140" Margin="0,0,10,0" FontWeight="Bold" FontFamily="Segoe UI" FontSize="15" Background="#3949ab" Foreground="White"/>
                <Button x:Name="CreateRestorePointButton" Content="Sistem Geri Yükleme Noktası" Click="CreateRestorePointButton_Click"
                        Width="200" Margin="0,0,10,0" FontWeight="Bold" FontFamily="Segoe UI" FontSize="15" Background="#ffb300" Foreground="#232323"/>
                <Button x:Name="BackupBloatwareButton" Content="Bloatware Yedekle" Click="BackupBloatwareButton_Click"
                        Width="140" Margin="0,0,10,0" FontWeight="Bold" FontFamily="Segoe UI" FontSize="15" Background="#43a047" Foreground="White"/>
                <Button x:Name="RestoreBloatwareButton" Content="Bloatware Geri Yükle" Click="RestoreBloatwareButton_Click"
                        Width="160" FontWeight="Bold" FontFamily="Segoe UI" FontSize="15" Background="#f06292" Foreground="White"/>
            </StackPanel>
        </StackPanel>

        <TextBox x:Name="LogTextBox"
                 Grid.Row="2" Height="120"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 Background="#19191c"
                 Foreground="#00e676"
                 FontSize="13"
                 FontFamily="Consolas"
                 IsReadOnly="True"
                 Margin="0,10,0,0"
                 BorderThickness="1" BorderBrush="#444" />
    </Grid>
</UserControl>
