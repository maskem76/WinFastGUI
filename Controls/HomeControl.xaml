<UserControl x:Class="WinFastGUI.Controls.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:WinFastGUI.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900"
             FontFamily="Segoe UI">
    
    <Grid Background="#1E1E1E">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="25">

                <TextBlock Text="{x:Static properties:Strings.Home_Title}" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#007ACC" 
                           TextWrapping="Wrap"/>
                <TextBlock Text="{x:Static properties:Strings.Home_Subtitle}" 
                           FontSize="18" 
                           Foreground="LightGray" 
                           FontStyle="Italic"
                           Margin="0,5,0,25"/>

                <TextBlock Text="{x:Static properties:Strings.Home_WhatIsWinFast_Title}" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           Foreground="White" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="{x:Static properties:Strings.Home_WhatIsWinFast_Description}" 
                           FontSize="15" 
                           Foreground="WhiteSmoke"
                           TextWrapping="Wrap"
                           LineHeight="22"
                           Margin="0,0,0,25"/>

                <TextBlock Text="{x:Static properties:Strings.Home_FeaturesAndUsage_Title}" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           Foreground="White" 
                           Margin="0,0,0,15"/>

                <TextBlock Text="{x:Static properties:Strings.Home_Feature_OptimizationManager_Title}" FontSize="18" FontWeight="SemiBold" Foreground="#0099FF" Margin="0,0,0,5"/>
                <TextBlock Text="{x:Static properties:Strings.Home_Feature_OptimizationManager_Description}" 
                           FontSize="15" Foreground="WhiteSmoke" TextWrapping="Wrap" LineHeight="22" Margin="10,0,0,15"/>

                <TextBlock Text="{x:Static properties:Strings.Home_Feature_ApplicationRemover_Title}" FontSize="18" FontWeight="SemiBold" Foreground="#0099FF" Margin="0,0,0,5"/>
                <TextBlock Text="{x:Static properties:Strings.Home_Feature_ApplicationRemover_Description}" 
                           FontSize="15" Foreground="WhiteSmoke" TextWrapping="Wrap" LineHeight="22" Margin="10,0,0,15"/>
                
                <TextBlock Text="{x:Static properties:Strings.Home_Feature_CustomTools_Title}" FontSize="18" FontWeight="SemiBold" Foreground="#0099FF" Margin="0,0,0,5"/>
                <TextBlock Text="{x:Static properties:Strings.Home_Feature_CustomTools_Description}" 
                           FontSize="15" Foreground="WhiteSmoke" TextWrapping="Wrap" LineHeight="22" Margin="10,0,0,25"/>

                <TextBlock Text="{x:Static properties:Strings.Home_QuickStartSteps_Title}" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           Foreground="White" 
                           Margin="0,0,0,10"/>
                <StackPanel Margin="10,0,0,25">
                    <TextBlock Text="{x:Static properties:Strings.Home_QuickStartStep_1}" FontSize="15" Foreground="WhiteSmoke" Margin="0,0,0,5"/>
                    <TextBlock Text="{x:Static properties:Strings.Home_QuickStartStep_2}" FontSize="15" Foreground="WhiteSmoke" Margin="0,0,0,5"/>
                    <TextBlock Text="{x:Static properties:Strings.Home_QuickStartStep_3}" FontSize="15" Foreground="WhiteSmoke" Margin="0,0,0,5"/>
                    <TextBlock Text="{x:Static properties:Strings.Home_QuickStartStep_4}" FontSize="15" Foreground="WhiteSmoke" Margin="0,0,0,5"/>
                    <TextBlock Text="{x:Static properties:Strings.Home_QuickStartStep_5}" FontSize="15" Foreground="WhiteSmoke" Margin="0,0,0,5"/>
                    <TextBlock Text="{x:Static properties:Strings.Home_QuickStartStep_6}" FontSize="15" Foreground="WhiteSmoke" Margin="0,0,0,5"/>
                </StackPanel>
                
                <Border BorderBrush="#FFC107" BorderThickness="2" CornerRadius="5" Background="#2D2D30" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{x:Static properties:Strings.Home_Warnings_Title}" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#FFC107"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="{x:Static properties:Strings.Home_Warnings_Description}" 
                                   FontSize="15" 
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   LineHeight="22"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="{x:Static properties:Strings.Home_Footer}" 
                           FontSize="16" 
                           Foreground="LightGray"
                           FontStyle="Italic"
                           TextAlignment="Center"
                           Margin="0,30,0,0"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>